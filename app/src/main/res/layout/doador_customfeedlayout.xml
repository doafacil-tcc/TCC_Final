<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Creme"
    android:orientation="vertical"
    android:padding="16dp">


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgDoacao"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/txtTipoDoacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Tipo"
        android:textColor="@color/Verde"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgDoacao"
        app:layout_constraintTop_toTopOf="@+id/imgDoacao" />

    <TextView
        android:id="@+id/txtCategoriaDoacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Categoria"
        android:textColor="@color/Verde"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/txtTipoDoacao"
        app:layout_constraintTop_toBottomOf="@+id/txtTipoDoacao" />

    <TextView
        android:id="@+id/txtQuantidadeDoacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Quantidade"
        app:layout_constraintStart_toStartOf="@+id/txtTipoDoacao"
        app:layout_constraintTop_toBottomOf="@+id/txtCategoriaDoacao" />


</androidx.constraintlayout.widget.ConstraintLayout>